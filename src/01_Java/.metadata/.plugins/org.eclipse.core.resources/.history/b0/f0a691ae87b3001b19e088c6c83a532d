package com.lec.ex;
import java.util.Scanner;
// 3! = 3 * 2 * 1
// 2! = 2 * 1
// 1! = 1
public class Ex05 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int su;
		System.out.print("몇 !을 계산할까요?");
		do {
			su = sc.nextInt();
			if(su>0) break;
			System.out.print("양수를 입력하셔야 !을 계산할 거예요");
		}while(true);
		System.out.println(su);
	}
}







