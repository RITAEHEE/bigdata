package com.lec.car;

public class Car {
	private String color; // 속성, 데이터
	int cc;
	String brand;
	int speed;
	public void drive() { // 메소드
		speed = 60;
		System.out.println("운전한다. 지금 속도 " + speed);
	}
	public void park() {
		speed = 0;
		System.out.println("주차한다. 지금 속도 " + speed);
	}
	public void race() {
		speed = 120;
		System.out.println("레이싱한다. 지금 속도 " + speed);
	}
}
